---
import { tm } from "../../utils/tailwind";

import Button from "../basics/Button.astro";
import Image from "../basics/Image.astro";
import Spacer from "../basics/Spacer.astro";

interface Props {
	title: string;
	subtitle: string;
	description: string;
	image: ImageMetadata;
	alt: string;
	link?: string;
	classes?: {
		title?: string;
		subtitle?: string;
		description?: string;
		image?: string;
		button?: string;
	}
}

const {
	title,
	subtitle,
	description,
	image,
	alt,
	link,
	classes,
	...rest
} = Astro.props;
---
<div class="flex flex-col text-center bg-white dark:bg-dark-8 rounded-xl shadow-md" {...rest}>
	<Image src={image} alt={alt} class={tm("overflow-hidden h-[200px] w-[100%] object-cover rounded-t-xl", classes?.image)} />

	<div class="flex flex-col flex-1 p-5">
		<h1 class={tm("font-bold text-[20px] text-deepblue-7 dark:text-gravel-1", classes?.title)}>{title}</h1>
		<p class={tm("text-[14px] dark:text-gravel-4", classes?.subtitle)}>{subtitle}</p>
		<p class={tm("mt-5 text-[14px]", classes?.description)}>{description}</p>

		<Spacer />
	
		<Button size="md" class="mt-6 py-[8px] w-full" link={link}>
			LEARN MORE
		</Button>
	</div>
</div>
