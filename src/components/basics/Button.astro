---
import { tm } from '../../utils/tailwind';

const VARIANTS = {
	default: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded',
	secondary: 'bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded',
}

type Variant = keyof typeof VARIANTS;

interface Props {
	variant: Variant;
}

const { variant } = Astro.props;
---

<button class={tm("flex", VARIANTS[variant ?? "default"])}>
	<slot />
</button>