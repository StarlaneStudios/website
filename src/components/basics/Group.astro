---
import type { HTMLAttributes, HTMLTag } from "astro/types";
import Element from "./Element.astro";

interface Props extends HTMLAttributes<"div"> {
	as?: HTMLTag;
}

const { ...rest } = Astro.props;

---

<Element class:list="group" {...rest}>
	<slot />
</Element>

<style is:global>
	.group {
		@apply flex flex-wrap;
	}
</style>
