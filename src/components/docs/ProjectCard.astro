---
import { mdiDownload } from "@mdi/js";
import { tm } from "../../utils/tailwind";

import Icon from "../basics/Icon.astro";
import Image from "../basics/Image.astro";

interface Props {
	title: string;
	subtitle: string;
	description: string;
	logo: ImageMetadata;
	alt: string;
	link: string;
	classes?: {
		root?: string;
		title?: string;
		subtitle?: string;
		description?: string;
		logo?: string;
	}
}

const {
	title,
	subtitle,
	description,
	logo,
	alt,
	link,
	classes,
	...rest
} = Astro.props;
---
<a class={tm("bg-white dark:bg-dark-8 transition-colors duration-200 hover:bg-light-2 dark:hover:bg-dark-7 flex flex-col flex-1 p-5 gap-1 rounded-xl cursor-pointer shadow-md", classes?.root)} href={link} {...rest}>
	<div class="flex flex-row gap-4">
		<Image src={logo} alt={alt} class={tm("h-[50px] w-[50px] my-auto", classes?.logo)} />
		
		<div class="flex flex-col my-auto">
			<h1 class={tm("font-bold text-[20px] text-deepblue-7 dark:text-gravel-1", classes?.title)}>{title}</h1>
			<p class={tm("text-[14px] dark:text-gravel-4", classes?.subtitle)}>{subtitle}</p>
		</div>
	</div>

	<p class={tm("mt-5 text-[14px]", classes?.description)}>{description}</p>
</a>
