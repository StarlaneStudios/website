---
import BasePage from "../components/scaffold/BasePage.astro";
import Footer from "../components/scaffold/Footer.astro";

import "../styles/global.css";

interface Props {
	title?: string;
}

const title = Astro.props.title ? `${Astro.props.title} Docs - Starlane Studios` : "Starlane Studios";
---

<BasePage title={title}>
	<div style="min-height: calc(100vh - 12rem);">
		<slot />
	</div>

	<Footer />
</BasePage>